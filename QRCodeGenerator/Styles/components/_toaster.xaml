<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

    <!-- TOASTER STYLES -->

    <Style x:Key="Toaster" TargetType="Border">
        <Setter Property="Width" Value="330"></Setter>
        <Setter Property="Padding" Value="14"></Setter>
    </Style>

    <Style x:Key="Toaster__label--text" TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource MainBrush}"></Setter>
        <Setter Property="Opacity" Value="0.9"></Setter>
        <Setter Property="Margin" Value="0 0 0 -10 "></Setter>
    </Style>

    <Style x:Key="Toaster__label--header" TargetType="Label">
        <Setter Property="FontWeight" Value="Regular"></Setter>
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="Opacity" Value="0.8"></Setter>
        <Setter Property="Margin" Value="0 -12 0 -10"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource MainBrush}"></Setter>
    </Style>


</ResourceDictionary>