<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VMSDesktopUI.Styles.components">

    <Style x:Key="EmptyState" TargetType="{x:Type Label}">
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Margin" Value="0 100 0 0"></Setter>
        <Setter Property="FontWeight" Value="Light"></Setter>
        <Setter Property="Opacity" Value="0.4"></Setter>
        <Setter Property="Foreground" Value="#fff"></Setter>
    </Style>

    <Style x:Key="bigEmptyState" TargetType="{x:Type Label}" BasedOn="{StaticResource EmptyState}">
        <Setter Property="FontSize" Value="22"></Setter>
    </Style>

    <Style x:Key="smallEmptyState" TargetType="{x:Type Label}" BasedOn="{StaticResource EmptyState}">
        <Setter Property="FontSize" Value="16"></Setter>
    </Style>

</ResourceDictionary>